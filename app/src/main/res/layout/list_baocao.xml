<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewcolor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#BCBCBC"
            app:cardCornerRadius="35dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cake" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txttenPL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bánh ngọt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtphantramPL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50%"
                    android:textAlignment="viewEnd" />

                <TextView
                    android:id="@+id/txtsoluongPL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/txttienPL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-300.000"
                    android:textAlignment="viewEnd" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress1"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:indeterminateDrawable="@android:drawable/progress_horizontal"
                android:indeterminateDuration="3000"
                android:max="100"
                android:maxWidth="20dip"
                android:maxHeight="7dip"
                android:minWidth="20dip"
                android:minHeight="7dip"
                android:progressDrawable="@android:drawable/progress_horizontal" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>